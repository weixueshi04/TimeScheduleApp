# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=timeschedule_db
PG_USER=postgres
PG_PASSWORD=your_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB
MONGO_URI=mongodb://localhost:27017/timeschedule

# JWT
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRE=30d

# WebSocket
SOCKET_CORS_ORIGIN=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Third Party Services
# Aliyun OSS (for voice storage)
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=timeschedule-voice

# Content Moderation
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Notification
JPUSH_APP_KEY=
JPUSH_MASTER_SECRET=
